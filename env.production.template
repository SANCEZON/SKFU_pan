# Переменные окружения для production деплоя на VPS
# Скопируйте этот файл в .env и заполните реальными значениями

# База данных
DB_ROOT_PASSWORD=сгенерируйте_надежный_пароль
DB_USER=app_user
DB_PASSWORD=сгенерируйте_надежный_пароль
DB_NAME=attendance_db

# JWT секрет (минимум 32 символа, случайная строка)
JWT_SECRET=сгенерируйте_случайную_строку_минимум_32_символа

# CORS origins (через запятую, без пробелов)
CORS_ORIGIN=http://YOUR_IP,http://YOUR_DOMAIN

# Для фронтенда (используется при сборке)
VITE_API_URL=http://YOUR_IP/api

